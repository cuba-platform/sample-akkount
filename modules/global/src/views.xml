<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view class="akkount.entity.Account"
          extends="_local"
          name="account-with-currency">
        <property name="currency"
                  view="_minimal"/>
    </view>
    <view class="akkount.entity.Operation"
          extends="_local"
          name="operation-browse"
          systemProperties="true">
        <property name="acc1"
                  view="_minimal"/>
        <property name="acc2"
                  view="_minimal"/>
        <property name="category"
                  view="_minimal"/>
    </view>
    <view class="akkount.entity.Operation"
          extends="_local"
          name="operation-edit">
        <property name="acc1"
                  view="_minimal">
            <property name="currencyCode"/>
        </property>
        <property name="acc2"
                  view="_minimal">
            <property name="currencyCode"/>
        </property>
        <property name="category"
                  view="_minimal"/>
    </view>
    <view class="akkount.entity.Operation"
          extends="_local"
          name="operation-with-accounts">
        <property name="acc1"
                  view="_minimal"/>
        <property name="acc2"
                  view="_minimal"/>
    </view>
    <view class="akkount.entity.Operation"
          name="operation-recalc-balance">
        <property name="opDate"/>
        <property name="acc1"
                  view="_minimal"/>
        <property name="acc2"
                  view="_minimal"/>
        <property name="amount1"/>
        <property name="amount2"/>
    </view>
</views>
