<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.5/window.xsd"
        class="akkount.web.operation.TransferFrame"
        messagesPack="akkount.web.operation">
    <dsContext/>
    <layout>
        <grid spacing="true"
              width="100%">
            <columns>
                <column flex="0.0"/>
                <column flex="1.0"/>
            </columns>
            <rows>
                <row>
                    <label value="msg://account1"/>
                    <lookupPickerField datasource="operationDs"
                                       optionsDatasource="accountsDs"
                                       property="acc1"
                                       required="true"
                                       width="100%">
                        <actions>
                            <action id="lookup"/>
                        </actions>
                    </lookupPickerField>
                </row>
                <row>
                    <label value="msg://amount1"/>
                    <hbox spacing="true"
                          width="100%">
                        <textField id="amount1Field"
                                   required="true"
                                   requiredMessage="msg://amountIsRequired"
                                   width="100%"/>
                        <label id="currency1Lab"
                               align="MIDDLE_LEFT"
                               width="30px"/>
                    </hbox>
                </row>
                <row>
                    <label value="msg://account2"/>
                    <lookupPickerField datasource="operationDs"
                                       optionsDatasource="accountsDs"
                                       property="acc2"
                                       required="true"
                                       width="100%">
                        <actions>
                            <action id="lookup"/>
                        </actions>
                    </lookupPickerField>
                </row>
                <row>
                    <label value="msg://amount2"/>
                    <hbox spacing="true"
                          width="100%">
                        <textField id="amount2Field"
                                   required="true"
                                   requiredMessage="msg://amountIsRequired"
                                   width="100%"/>
                        <label id="currency2Lab"
                               align="MIDDLE_LEFT"
                               width="30px"/>
                    </hbox>
                </row>
                <row>
                    <label value="msg://comment"/>
                    <textArea datasource="operationDs"
                              property="comments"
                              rows="3"
                              width="100%"/>
                </row>
            </rows>
        </grid>
    </layout>
</window>
